<%- model_class = EventAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.published %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published_on) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.published_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:action) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.action %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:target_id) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.target_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:command_id) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.command_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:test_option_id) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.test_option_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:execution_order) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.execution_order %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:executed_last) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.executed_last %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:event_condition_id) %></dt>
      <dd><pre class="prettyprint"><%= @event_action.event_condition_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              event_actions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_action_path(@event_action), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_action_path(@event_action),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>