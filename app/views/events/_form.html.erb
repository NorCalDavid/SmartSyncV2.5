<%- model_class = Event -%>
<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @event do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
      
      <div class="form-group">
        <div class="col-md-10 form-group">
          <%= f.label "Start Date" %><br />
          <%= f.datetime_select :start, :order => [:month, :day, :year], :ampm => true, class: "form-control" %>
        </div>
        
        <div class="col-md-2 form-group">
          <%= f.label "All Day" %><br />
          <%= f.select :all_day, [["Yes", true], ["No", false]], { class: "selectpicker" } %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-12 form-group">
          <%= f.label "End" %><br />
          <%= f.datetime_select :finish, :order => [:month, :day, :year], :ampm => true, class: "form-control" %>
        </div>

        <div class="col-md-2 form-group">
          <%= f.label "Time Zone" %><br />
          <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Pacific Time (US & Canada)" %>
        </div>
      </div>

      <div class="row"></div>
    </div>
    <div class="panel-footer">
      <%= f.submit :class => 'btn btn-primary embossed' %>
      
      <span id="hidden-delete" style="display: none;">
        <%= link_to @event, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, id: 'destroy', class: 'btn btn-danger embossed' do %>
          <span class="glyphicon glyphicon-exclamation"></span> Delete
        <% end %>
      </span>
    </div>
  <% end %>
</div>
