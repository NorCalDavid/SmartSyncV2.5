<%- model_class = Schedule -%>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @event, remote: true do |f| %>

    	<div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
      
      <div class="form-group">
        <div class="col-md-6 form-group">
    	    <%= f.label "Start Date" %><br />
    			<%= f.date_select :start, :order => [:month, :day, :year], class: "form-control" %>
        </div>

        <div class="col-md-4 form-group">
    	    <%= f.label "Start Time" %><br />
    			<%= f.time_select :start, :ampm => true, class: "form-control" %>
        </div>
        
        <div class="col-md-2 form-group">
    	    <%= f.label "All Day" %><br />
      		<%= f.select :all_day, [["Yes", true], ["No", false]], { class: "selectpicker" } %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-6 form-group">
    	    <%= f.label "End Date" %><br />
    			<%= f.date_select :finish, :order => [:month, :day, :year], class: "form-control" %>
        </div>

        <div class="col-md-4 form-group">
    	    <%= f.label "End Time" %><br />
    			<%= f.time_select :finish, :ampm => true, class: "form-control" %>
        </div>
      </div>

    	<div class="row"></div>
    </div>
    <div class="modal-footer">
    	<%= f.submit nil, :class => 'btn btn-primary embossed' %>
    	
      <span id="hidden-delete" style="display: none;">
      	<%= link_to @event, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, id: 'destroy', class: 'btn btn-danger embossed' do %>
          <span class="glyphicon glyphicon-exclamation"></span> Delete
        <% end %>
      </span>
    </div>
  <% end %>
</div>
