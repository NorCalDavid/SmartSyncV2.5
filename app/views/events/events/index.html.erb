<%- model_class = Event -%>
<% model_title = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% action_title = t '.title', :default => [:'helpers.titles.all', 'View %{model}'], :model => model_class.model_name.human.pluralize.titleize %>
<div class="main-content">
  <div class="pageheader">
    <h1><i class="fa fa-bell fa-2x primary-color"></i> <%=model_title %> <small><%= action_title %></small></h1>
    <p class="description">Manage Your Smart <%= model_class %> Details</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
        <li><%= model_title %></li>
        <li class="active">
          <%= link_to action_title %>
        </li>
      </ol>
    </div>
  </div>

  <div class='container-body padding-all-md'>
    <div class="row">
      <div class="col-md-12 padding-top">
        <div class="panel panel-primary">
					<div class="panel-heading">
						<%= link_to 'New Event',new_event_path, :class => 'btn btn-primary embossed' %>
					</div>

					<div class="panel-body">

						<div class="row">
							<div class="col-md-12" id="event-calendar"></div>
						</div>
					</div> 
				</div>
			</div>   
		</div>
	</div> 
</div>
