<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @event.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @event.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @event.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published) %></dt>
      <dd><pre class="prettyprint"><%= @event.published %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published_on) %></dt>
      <dd><pre class="prettyprint"><%= @event.published_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @event.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:favorite) %></dt>
      <dd><pre class="prettyprint"><%= @event.favorite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:executed_last) %></dt>
      <dd><pre class="prettyprint"><%= @event.executed_last %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:event_group_id) %></dt>
      <dd><pre class="prettyprint"><%= @event.event_group_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>