<%- model_class = Github -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:screen_name) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:profile_url) %></th>
      <th><%= model_class.human_attribute_name(:personal_website_url) %></th>
      <th><%= model_class.human_attribute_name(:public_repos_url) %></th>
      <th><%= model_class.human_attribute_name(:public_gists_url) %></th>
      <th><%= model_class.human_attribute_name(:total_data_stored) %></th>
      <th><%= model_class.human_attribute_name(:followers_url) %></th>
      <th><%= model_class.human_attribute_name(:following_url) %></th>
      <th><%= model_class.human_attribute_name(:starred_url) %></th>
      <th><%= model_class.human_attribute_name(:subscriptions_url) %></th>
      <th><%= model_class.human_attribute_name(:organizations_url) %></th>
      <th><%= model_class.human_attribute_name(:events_url) %></th>
      <th><%= model_class.human_attribute_name(:uid) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @githubs.each do |github| %>
      <tr>
        <td><%= github.id %></td>
          <td><%= github.screen_name %></td>
          <td><%= github.location %></td>
          <td><%= github.image_url %></td>
          <td><%= github.profile_url %></td>
          <td><%= github.personal_website_url %></td>
          <td><%= github.public_repos_url %></td>
          <td><%= github.public_gists_url %></td>
          <td><%= github.total_data_stored %></td>
          <td><%= github.followers_url %></td>
          <td><%= github.following_url %></td>
          <td><%= github.starred_url %></td>
          <td><%= github.subscriptions_url %></td>
          <td><%= github.organizations_url %></td>
          <td><%= github.events_url %></td>
          <td><%= github.uid %></td>
          <td><%= github.user_id %></td>
        <td><%=l github.created_at, format: :long %></td>
        <td>
          <%= link_to github_path(github), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_github_path(github), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to github_path(github), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_github_path,
            :class => 'btn btn-primary' %>
