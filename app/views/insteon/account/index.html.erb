<div class="main-content">
  <div class="pageheader">
    <h1>Insteon Accounts</h1>
    <p class="description">Manage Your Insteon Accounts</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">All Insteon Accounts</li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row">
      <div class="col-md-offset-1 col-md-10 padding-top">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to dashboard_path, class: 'btn btn-default embossed' do %>
            <span class="glyphicon glyphicon-plus"></span>
              Dashboard
            <% end %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th class="text-center">AccountID</th>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Middle Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Username</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Phone</th>
                    <th class="text-center"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @insteon_accounts.each do |account| %>
                    <tr>
                      <td class="text-center"><%= account['AccountID'] %></td>
                      <td class="text-center"><%= account['FirstName'] %></td>
                      <td class="text-center"><%= account['MiddleName'] %></td>
                      <td class="text-center"><%= account['LastName'] %></td>
                      <td class="text-center"><%= account['Username'] %></td>
                      <td class="text-center"><%= account['Email'] %></td>
                      <td class="text-center"><%= account['Phone'] %></td>
                      <td class="text-center">
                        
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 
