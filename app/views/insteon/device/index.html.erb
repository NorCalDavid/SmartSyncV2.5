<div class="main-content">
  <div class="pageheader">
    <h1>Insteon Devices</h1>
    <p class="description">Manage Your Insteon Devices</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">All Insteon Devices</li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row padding-all-md">
      <div class="col-md-12">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to dashboard_path, class: 'btn btn-default embossed' do %>
            <span class="glyphicon glyphicon-plus"></span>
              Dashboard
            <% end %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th class="text-center">House ID</th>
                    <th class="text-center">Device ID</th>
                    <th class="text-center">Device Name</th>
                    <th class="text-center">Favorite?</th>
                    <th class="text-center">Insteon ID</th>
                    <th class="text-center"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @insteon_devices.each do |device| %>
                    <tr class="<%= "default-bg-color" if imported_device?(device['DeviceID']) %> ">
                      <td class="text-center"><%= device['HouseID'] %></td>
                      <td class="text-center"><%= device['DeviceID'] %></td>
                      <td class="text-center"><%= device['DeviceName'] %></td>
                      <td class="text-center"><%= device['Favorite'] %></td>
                      <td class="text-center"><%= device['InsteonID'] %></td>
                      <td class="text-center">
                        <%= button_to 'Import Device',"/insteon/devices/import?device_id=#{device['DeviceID']}", :method => "get", :class => 'btn btn-warning btn-sm embossed' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 
