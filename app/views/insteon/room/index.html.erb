<div class="main-content">
  <div class="pageheader">
    <h1>Insteon Rooms</h1>
    <p class="description">Manage Your Insteon Rooms</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">All Insteon Rooms</li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row padding-all-md">
      <div class="col-md-offset-1 col-md-10">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to dashboard_path, class: 'btn btn-default embossed' do %>
            <span class="glyphicon glyphicon-plus"></span>
              Dashboard
            <% end %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th class="text-center">House ID</th>
                    <th class="text-center">Room ID</th>
                    <th class="text-center">Room Name</th>
                    <th class="text-center">Visible?</th>
                    <th class="text-center">Favorite?</th>
                    <th class="text-center"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @insteon_rooms.each do |room| %>
                    <tr>
                      <td class="text-center"><%= room['HouseID'] %></td>
                      <td class="text-center"><%= room['RoomID'] %></td>
                      <td class="text-center"><%= room['RoomName'] %></td>
                      <td class="text-center"><%= room['Visible'] %></td>
                      <td class="text-center"><%= room['Favorite'] %></td>
                      <td class="text-center">
                        
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 
