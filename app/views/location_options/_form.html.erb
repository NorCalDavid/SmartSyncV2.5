<div class='container-body'>
  <div class="row">
    <div class="col-md-offset-1 col-md-10 padding-top">
      <div class="panel panel-primary">

        <div class="panel-heading">
          <h3 class="panel-title">Location Options</h3>
        </div>
        <div class="panel-body">
          <%= bootstrap_form_for(@location_option) do |f| %>
            <%= f.text_field :name %>
            <%= f.text_field :description %>
            <%= f.text_field :location_type %>
            <%= f.text_field :dashboard_display %>

            <%= f.submit %>
            <%= link_to location_options_path, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-info-sign"></span>
              Cancel
            <% end %>
            <%= link_to dashboard_path, class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Dashboard
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
