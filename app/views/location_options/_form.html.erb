<div class='container-body'>
  <div class="row">
    <div class="col-md-offset-1 col-md-10 padding-top">
      <div class="panel panel-primary">

        <div class="panel-heading">
          <h3 class="panel-title">Location Options</h3>
        </div>
        <div class="panel-body">
          <%= bootstrap_form_for(@location_option) do |f| %>
          <% if @location_option.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@location_option.errors.count, "error") %> prohibited this Location Option from being saved:</h2>

            <ul>
              <% @location_option.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

            <%= f.text_field :name %>
            <%= f.text_field :description %>
            <%= f.text_field :location_type %>
            <%= f.text_field :dashboard_display %>

            <%= f.submit %>
            <%= link_to location_options_path, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-info-sign"></span>
              Cancel
            <% end %>
            <%= link_to dashboard_path, class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Dashboard
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
