<%- model_class = LocationOption -%>
<div class="main-content">
  <div class="pageheader">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    <p class="description">All Location Options</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">Location Options</li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row">
      <div class="col-md-offset-1 col-md-10 padding-top">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to new_location_option_path, class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span>
            New Location Option
            <% end %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th><%= model_class.human_attribute_name(:id) %></th>
                    <th><%= model_class.human_attribute_name(:name) %></th>
                    <th><%= model_class.human_attribute_name(:description) %></th>
                    <th><%= model_class.human_attribute_name(:location_type) %></th>
                    <th><%= model_class.human_attribute_name(:dashboard_display) %></th>
                    <th><%= model_class.human_attribute_name(:created_at) %></th>
                    <th><%=t '.actions', :default => t("helpers.actions") %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @location_options.each do |location_option| %>
                    <tr>
                      <td><%= location_option.id %></td>
                        <td><%= location_option.name %></td>
                        <td><%= location_option.description %></td>
                        <td><%= location_option.location_type %></td>
                        <td><%= location_option.dashboard_display %></td>
                      <td><%=l location_option.created_at, format: :long %></td>
                      <td>
                        <%= link_to location_option_path(location_option), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                          <%= glyph 'info-sign' %>
                        <%- end -%>
                        <%= link_to edit_location_option_path(location_option), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                          <%= glyph 'pencil' %>
                        <%- end -%>
                        <%= link_to location_option_path(location_option), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                          <%= glyph 'remove' %>
                        <%- end -%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <%= link_to t('.new', :default => t("helpers.links.new")),
                          new_location_option_path,
                          :class => 'btn btn-primary' %>

            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 

