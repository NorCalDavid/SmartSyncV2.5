<%- model_class = Property -%>
<div class="main-content">
  <div class="pageheader">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    <p class="description">All Properties</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">Properties</li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row">
      <div class="col-md-offset-1 col-md-10 padding-top">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to dashboard_properties_new_path, class: 'btn btn-default embossed' do %>
            <span class="glyphicon glyphicon-plus"></span>
            New Property
            <% end %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th><%= model_class.human_attribute_name(:name) %></th>
                    <th><%= model_class.human_attribute_name(:description) %></th>
                    <th><%= model_class.human_attribute_name(:address) %></th>
                    <th><%= model_class.human_attribute_name(:city) %></th>
                    <th><%= model_class.human_attribute_name(:state) %></th>
                    <th><%= model_class.human_attribute_name(:zipcode) %></th>
                    <th><%= model_class.human_attribute_name(:user_id) %></th>
                    <th><%= model_class.human_attribute_name(:created_at) %></th>
                    <th><%=t '.actions', :default => t("helpers.actions") %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @properties.each do |property| %>
                    <tr>
                      <td><%= property.name %></td>
                      <td><%= property.description %></td>
                      <td><%= property.address %></td>
                      <td><%= property.city %></td>
                      <td><%= property.state %></td>
                      <td><%= property.zipcode %></td>
                      <td><%= property.user_id %></td>
                      <td><%=l property.created_at, format: :long %></td>
                      <td>
                        <%= link_to property_path(property), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                          <%= glyph 'info-sign' %>
                        <%- end -%>
                        <%= link_to edit_property_path(property), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                          <%= glyph 'pencil' %>
                        <%- end -%>
                        <%= link_to property_path(property), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                          <%= glyph 'remove' %>
                        <%- end -%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 
