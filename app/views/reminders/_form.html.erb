<%= bootstrap_form_for @reminder, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.text_field :name, :class => 'text_field form-control' %>
  <%= f.text_field :description, :class => 'text_field form-control' %>
  <%= f.text_field :recipient_id, :class => 'text_field form-control' %>
  <%= f.phone_field :recipient_phone_number, :class => 'text_field form-control' %>
  <%= f.time_select :notification_time, :ampm => true, :class => 'text_field form-control' %>
  <%= f.date_select :notification_time, :order => [:month, :day, :year], :hide_label => true, :class => 'text_field form-control' %>

  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Pacific Time (US & Canada)" %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              reminders_path, :class => 'btn btn-default' %>
<% end %>
