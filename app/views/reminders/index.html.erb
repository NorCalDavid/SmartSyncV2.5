<%- model_class = Reminder -%>
<% model_title = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% action_title = t '.title', :default => [:'helpers.titles.all', 'View All %{model}'], :model => model_class.model_name.human.pluralize.titleize %>
<div class="main-content">
  <div class="pageheader">
    <h1><i class="fa fa-bell fa-2x primary-color"></i> <%=model_title %> <small><%= action_title %></small></h1>
    <p class="description">Manage Your <%= model_class %> Details</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
        <li><%= model_title %></li>
        <li class="active">
          <%= link_to action_title %>
        </li>
      </ol>
    </div>
  </div>

  <div class='container-body padding-all-lg'>
    <div class="row">
      <div class="col-md-12 padding-top">
        <div class="panel panel-primary">

          <div class="panel-heading">
            <%= link_to 'New Reminder',new_reminder_path, :class => 'btn btn-primary' %>
          </div>

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th><%= model_class.human_attribute_name(:id) %></th>
                    <th><%= model_class.human_attribute_name(:name) %></th>
                    <th><%= model_class.human_attribute_name(:description) %></th>
                    <th><%= model_class.human_attribute_name(:recipient_id) %></th>
                    <th><%= model_class.human_attribute_name(:recipient_phone_number) %></th>
                    <th><%= model_class.human_attribute_name(:notification_time) %></th>
                    <th><%= model_class.human_attribute_name(:time_zone) %></th>
                    <th><%= model_class.human_attribute_name(:created_at) %></th>
                    <th><%=t '.actions', :default => t("helpers.actions") %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @reminders.each do |reminder| %>
                    <tr>
                      <td><%= reminder.id %></td>
                        <td><%= reminder.name %></td>
                        <td><%= reminder.description %></td>
                        <td><%= reminder.recipient_id %></td>
                        <td><%= number_to_phone(reminder.recipient_phone_number, area_code: :true) %></td>
                        <td><%=l reminder.notification_time, format: :long %></td>
                        <td><%= reminder.time_zone %></td>
                      <td><%=l reminder.created_at, format: :long %></td>
                      <td>
                        <%= link_to reminder_path(reminder), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                          <%= glyph 'info-sign' %>
                        <%- end -%>
                        <%= link_to edit_reminder_path(reminder), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                          <%= glyph 'pencil' %>
                        <%- end -%>
                        <%= link_to reminder_path(reminder), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                          <%= glyph 'remove' %>
                        <%- end -%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div> 
        </div>
      </div>   
    </div>
  </div> 
</div> 
