<section id="main-content" class="animated fadeInUp">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">Room Wizard</h3>
			 	</div>
				
				<div class="panel-body">
					<section class="fuelux">
						<div id="NewRoomWizard" class="wizard">
							<ul class="steps">
								<li data-target="#step1" class="active">Room Info<span class="chevron"></span></li>
							</ul>
						</div>
						
						<%= form_for(@room, class: "form-horizontal") do |f| %>
						<% if @room.errors.any? %>
						<div id="error_explanation">
							<h2><%= pluralize(@room.errors.count, "error") %> prohibited this device from being saved:</h2>

							<ul>
								<% @room.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
						<% end %>

						<div class="step-content">
							<div class="step-pane active" id="step1">
								<div class="row padding-top">
									<div class="form-group col-md-offset-1 col-md-5">
										<div class="input-group">
											<span class="input-group-addon control-label">Select Property</span>
											<%= f.select :property_id, options_for_select(collection_options(@configuration[:properties]), active_property), {:prompt => 'Select'}, {class: "form-control box-left"} %>
										</div><br/>
									</div>

									<div class="form-group col-md-5">
										<div class="input-group">
											<span class="input-group-addon control-label">Select Room Location</span>
											<%= f.select :location, options_for_select(collection_options(@configuration[:room_location_options])), {:prompt => 'Select'}, {class: "form-control box-left"} %>
										</div><br/>
									</div>

								</div>

								<div class="col-md-12 divider"></div><br/>

								<div class="row">
									<div class="form-group col-md-offset-1 col-md-5">
										<div class="input-group">
											<span class="input-group-addon">Name: </span>
											<%= f.text_field :name, class: 'form-control', placeholder: "Room Name" %>
										</div><br/>
									</div>


									<div class="form-group col-md-5">
										<div class="input-group">
											<span class="input-group-addon">Description: </span>
											<%= f.text_area :description, class: 'form-control' %>
										</div><br/>
									</div>
								</div>

							</div>
						</section>
						</div>

						<div class="panel-footer">
		          <div class="row">
		            <div class="form-group text-right">
		              <span class="col-md-4"><%= f.submit nil, class: 'btn btn-primary btn-block embossed' %></span>
		              <span class="col-md-4"><%= button_to "Return To Dashboard", dashboard_path, :method => "get", :class => 'btn btn-success btn-block embossed' %></span>
		              <span class="col-md-4"><%= button_to "View All Rooms", rooms_path, :method => "get", :class => 'btn btn-warning btn-block embossed' %></span>
		            </div>
		          </div>
		        </div>

					<% end %>
					
				</div>
			</div>
		</div>
	</div>
</section>

<% content_for :javascript do %>
<!--Load these page level functions-->
<script>
$(document).ready(function() {
	app.formWizard();
});
</script>
<% end %>