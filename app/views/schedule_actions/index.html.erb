<p id="notice"><%= notice %></p>

<h1>Listing Schedule Actions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Published</th>
      <th>Published on</th>
      <th>Action</th>
      <th>Target</th>
      <th>Command</th>
      <th>Executed count</th>
      <th>Executed last</th>
      <th>Schedule</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_actions.each do |schedule_action| %>
      <tr>
        <td><%= schedule_action.name %></td>
        <td><%= schedule_action.description %></td>
        <td><%= schedule_action.type %></td>
        <td><%= schedule_action.published %></td>
        <td><%= schedule_action.published_on %></td>
        <td><%= schedule_action.action %></td>
        <td><%= schedule_action.target_id %></td>
        <td><%= schedule_action.command %></td>
        <td><%= schedule_action.executed_count %></td>
        <td><%= schedule_action.executed_last %></td>
        <td><%= schedule_action.schedule %></td>
        <td><%= schedule_action.status %></td>
        <td><%= link_to 'Show', schedule_action %></td>
        <td><%= link_to 'Edit', edit_schedule_action_path(schedule_action) %></td>
        <td><%= link_to 'Destroy', schedule_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

