<%- model_class = ScheduleActionSeries -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:frequency) %></dt>
      <dd><pre class="prettyprint"><%= @schedule_action_series.frequency %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:period) %></dt>
      <dd><pre class="prettyprint"><%= @schedule_action_series.period %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:starttime) %></dt>
      <dd><pre class="prettyprint"><%= @schedule_action_series.starttime %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:endtime) %></dt>
      <dd><pre class="prettyprint"><%= @schedule_action_series.endtime %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:all_day) %></dt>
      <dd><pre class="prettyprint"><%= @schedule_action_series.all_day %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              schedule_action_series_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_action_series_path(@schedule_action_series), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_action_series_path(@schedule_action_series),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>