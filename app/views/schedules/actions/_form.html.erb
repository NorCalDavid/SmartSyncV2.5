<%= form_for @schedule_action, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :starttime, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :starttime, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :endtime, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :endtime, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :all_day, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :all_day, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :type, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :published, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_on, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :published_on, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :action, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :action, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :target_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :target_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :command_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :command_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :executed_last, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :executed_last, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :schedule_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :schedule_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :schedule_action_series_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :schedule_action_series_id, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  schedule_actions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
