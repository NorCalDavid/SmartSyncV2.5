<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:frequency) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.frequency %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:period) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.period %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_time) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.start_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end_time) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.end_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_zone) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.time_zone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:all_day) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.all_day %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.published %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:published_on) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.published_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:favorite) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.favorite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:executed_last) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.executed_last %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:property_id) %></dt>
      <dd><pre class="prettyprint"><%= @schedule.property_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              schedules_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_path(@schedule), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_path(@schedule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>