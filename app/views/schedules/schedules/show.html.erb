<%- model_class = Schedule -%>
<% model_title = t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<% action_title = t '.title', :default => [:'helpers.titles.view', 'View %{model}'], :model => model_class.model_name.human.titleize %>
<div class="main-content">
  <div class="pageheader">
    <h1><i class="fa fa-home fa-2x primary-color"></i> <%=model_title %> <small><%= action_title %></small></h1>
    <p class="description">Manage Your <%= model_class %> Details</p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
        <li><%= model_title %></li>
        <li class="active">
          <%= link_to action_title %>
        </li>
      </ol>
    </div>
  </div>

  <div class='container-body padding-all-lg'>
    <div class="row">
      <div class="col-md-12 padding-top">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <div class="property-icon">
              <i class="fa fa-arrow-right fa-2x"></i>
              <span class="white-color titleprint">
                <%= @schedule.name %>
              </span>
            </div>
          </div>

          <div class="panel-body social-profile">
            <div class="fieldset">
              <dl>

                <div class="col-md-6">
                  <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
                  <dd><pre class="prettyprint"><%= @schedule.name %></pre></dd>
                </div>

                <div class="col-md-6">
                  <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
                  <dd><pre class="prettyprint"><%= @schedule.description %></pre></dd>
                </div> 
                
                <div class="col-md-4">
                  <dt class="label label-default"><%= model_class.human_attribute_name(:start) %></dt>
                  <dd><pre class="prettyprint"><%= @schedule.start %></pre></dd>
                </div> 

                <div class="col-md-4">
                  <dt class="label label-default"><%= model_class.human_attribute_name(:finish) %></dt>
                  <dd><pre class="prettyprint"><%= @schedule.finish %></pre></dd>
                </div> 

                <div class="col-md-2">
                  <dt class="label label-default"><%= model_class.human_attribute_name(:all_day) %></dt>
                  <dd><pre class="prettyprint"><%= @schedule.all_day %></pre></dd>
                </div> 

              </dl>
            </div>
          </div>
          
          <div class="panel-footer">
            <div class="row">
              <div class="form-group text-right">
                <span class="col-md-4">
                  <%= button_to t('.back', :default => t("helpers.links.back")),
                            schedules_path, :class => 'btn btn-default btn-block embossed'  %>
                </span>

                <span class="col-md-4">
                  <%= button_to t('.edit', :default => t("helpers.links.edit")), edit_schedule_path(@schedule), :method => "get", :class => 'btn btn-warning btn-block embossed' %>
                </span>

                <span class="col-md-4">
                  <%= button_to t('.destroy', :default => t("helpers.links.destroy")),
                            schedule_path(@schedule),
                            :method => 'delete',
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-danger btn-block embossed' %>
                </span>
              </div>
            </div> 
          </div>
        </div> 
      </div> 
    </div> 
  </div> 
</div> 
