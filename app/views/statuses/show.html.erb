<%- model_class = Status -%>
<div class="main-content">
  <div class="pageheader">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    <p class="description"></p>
    <div class="breadcrumb-wrapper hidden-xs">
      <span class="label">You are here:</span>
      <ol class="breadcrumb">
          <li class="active">Status: <%= @status.name %></li>
      </ol>
    </div>
  </div>

  <div class='container-body'>
    <div class="row">
      <div class="col-md-offset-1 col-md-10 padding-top">
        <div class="panel panel-primary">
          <div class="panel-body">  
            <div class="fieldset">
              <dl>
                <dt class="label label-default"><%= model_class.human_attribute_name(:code) %></dt>
                <dd><pre class="prettyprint"><%= @status.code %></pre></dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
                <dd><pre class="prettyprint"><%= @status.name %></pre></dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:icon) %></dt>
                <dd><pre class="prettyprint"><%= @status.icon %></pre></dd>
              </dl>
            </div>

            <div class="form-group">
              <%= link_to t('.back', :default => t("helpers.links.back")),
                          statuses_path, :class => 'btn btn-default'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_status_path(@status), :class => 'btn btn-default' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          status_path(@status),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-danger' %>
            </div>
          </div>
        </div> 
      </div> 
    </div> 
  </div> 
</div> 
